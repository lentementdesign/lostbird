
<div class="col-sm-12 d-flex justify-content-center device-page">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <h1>ユーザー情報の編集</h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "現在のパスワード" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "新しいパスワード" %> <i>(変えたくない場合は空白のままで)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p>削除しますか？ <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除しますか" }, method: :delete %></p>

<%= link_to "Back", :back %>

</div>
