
<div class="col-sm-12">
<h1><%= @user.nickname %></h1>

<h2>メールアドレス</h2>
<p><%= @user.email %></p>

<h2>パスワード</h2>
<p>●●●●</p>

<h2>登録しているペット</h2>
  <% @pets.each do |pet| %>
  <p><%= link_to pet.kind, pet_path(pet.id) %></p>
  <% end %>

<br>
<p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>

<% if @user.id == current_user.id %>
<p><%= link_to "ユーザー情報の編集", edit_user_registration_path %></p>

<% else %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, value: @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

</div>
