<div class="col-sm-12" id="room-page">
  <% if @anotherEntries.count == 0 %>
    <p>メッセージがありません。</p>
  <% end %>
  <% @anotherEntries.each do |e| %>
    <% if e.room.messages.present? %>
    <div class="message-box">
      <%= link_to room_path(e.room.id) do %>
        <p><%= e.user.nickname %>さん</p>
        <p><%= e.room.messages.last.content %></p>
        <p><%= e.room.messages.last.created_at.strftime("%Y年%m月%d日 %H:%M") %></p>
      <% end %>
    </div>
    <% end %>
  <% end %>
</div>
