
<% @pets.each do |pet| %>
<div class="col-sm-12 col-md-4">
  <p class="img-fluid"><%= link_to image_tag(pet.image.url, class: "img-fluid"), pet_path(pet.id) %></p>
  <p class="pet_feature"><%= link_to pet.feature, pet_path(pet.id) %></p>
  <p class="pet_created_at"><%= link_to pet.created_at, pet_path(pet.id) %></p>
</div>
<% end %>
